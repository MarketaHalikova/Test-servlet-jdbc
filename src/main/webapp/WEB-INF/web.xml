<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Test Servlets</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <display-name>LoginServlet</display-name>
        <servlet-class>com.marketahalikova.jdbctest.controllers.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProjectListServlet</servlet-name>
        <display-name>ProjectListServlet</display-name>
        <servlet-class>com.marketahalikova.jdbctest.controllers.ProjectListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProjectDetailServlet</servlet-name>
        <display-name>ProjectDetailServlet</display-name>
        <servlet-class>com.marketahalikova.jdbctest.controllers.ProjectDetailServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <display-name>ErrorServlet</display-name>
        <servlet-class>com.marketahalikova.jdbctest.controllers.ErrorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>ProjectListServlet</servlet-name>
        <url-pattern>/projectList.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProjectDetailServlet</servlet-name>
        <url-pattern>/projectDetail.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error.do</url-pattern>
    </servlet-mapping>

    <!-- nacteni uvodni stranky -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
